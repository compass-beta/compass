<!DOCTYPE html>
<html>
  <head>
    <%= render 'partial/head' %>
  </head>

  <body class="drawer drawer--left">
  <%= render 'partial/header' %>
  <main id="main_page">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class:"alert alert-#{message_type}") %>
      <% end %>
        <%= yield %>
  </main>
  <%= render 'partial/footer' %>
  <%= debug(params) if Rails.env.development? %>
  </body>
</html>
